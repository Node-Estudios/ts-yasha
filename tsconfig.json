{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "rootDir": "./src",
        "paths": {
            "@/*": ["/src/*"],
            "@proto": ["/src/proto/*"],
        },
        "allowJs": true,
        "checkJs": true,
        "declaration": true,
        "outDir": "./lib",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "lib"],
}
