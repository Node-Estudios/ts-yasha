{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "paths": {
            "@/*": ["/src/*"],
            "@proto": ["/proto/*"],
        },
        "declaration": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "noImplicitOverride": true
    },
    "exclude": [ "node_modules" ]
}