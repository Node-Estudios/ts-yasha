{
	"main": "index.js",
	"types": "index.d.ts",
	"name": "yasha",
	"version": "3.1.0",
	"dependencies": {
		"@discordjs/voice": "github:Node-Estudios/voice#dist",
		"discord.js": "14.12.1",
		"google-protobuf": "^3.21.2",
		"js-common": "github:Node-Estudios/js-common",
		"node-fetch": "^2.6.6",
		"sange": "github:Node-Estudios/sange",
		"sodium": "github:Node-Estudios/sodium"
	},
	"scripts": {
		"proto": "mkdir -p proto/build; protoc --proto_path=proto --ts_out=proto/build --ts_opt=explicit_override,target=node youtube.proto",
		"prepare": "npm run build",
		"build": "npm run proto && npx tsc",
		"git-publish": "git-publish -b dist"
	},
	"devDependencies": {
		"git-publish": "^2.0.0",
		"@types/google-protobuf": "3.15.6",
		"ts-standard": "12.0.2",
		"typescript": "5.1.6"
	},
	"files": [
		"src",
		"build",
		"proto",
		"index.d.ts"
	],
	"eslintConfig": {
		"extends": "./node_modules/ts-standard/eslintrc.json",
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"rules": {
			"@typescript-eslint/indent": [
				"error",
				4
			],
			"@typescript-eslint/strict-boolean-expressions": "off",
			"@typescript-eslint/explicit-function-return-type": "off",
			"@typescript-eslint/restrict-plus-operands": "off",
			"@typescript-eslint/comma-dangle": [ "error", "always-multiline"],
			"@typescript-eslint/restrict-template-expressions": "off",
			"no-return-assign": "off"
		},
		"ignorePatterns": [
			"proto/build",
			"*.js"
		]
	}
}
