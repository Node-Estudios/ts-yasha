{
	"main": "index.js",
	"types": "index.d.ts",
	"name": "yasha",
	"version": "3.1.0",
	"dependencies": {
		"@discordjs/voice": "github:davidzeng0/voice#dist",
		"discord.js": "14.12.1",
		"google-protobuf": "^3.21.2",
		"js-common": "github:davidzeng0/js-common#dist",
		"node-fetch": "^2.6.6",
		"sange": "github:davidzeng0/sange",
		"sodium": "github:davidzeng0/sodium#dist"
	},
	"scripts": {
		"proto": "mkdir -p build; protoc --proto_path=proto --js_out=import_style=commonjs,binary:build youtube.proto",
		"proto:ts": "mkdir -p proto/build; protoc --proto_path=proto --ts_out=proto/build --ts_opt=target=node youtube.proto",
		"prepare": "npm run proto:ts && npm run build:ts",
		"build": "npm run proto:ts && npm run build:ts",
		"build:ts": "npx tsc -t esnext -m nodenext --strict --noImplicitOverride --skipLibCheck -d src/Error.ts src/Request.ts src/Track.ts src/VoiceConnection.ts index.ts api.ts src/api/File.ts src/api/Youtube.ts src/Source.ts",
		"git-publish": "git-publish -b dist"
	},
	"devDependencies": {
		"git-publish": "^2.0.0",
		"@types/google-protobuf": "3.15.6",
		"ts-standard": "12.0.2",
		"typescript": "5.1.6"
	},
	"files": [
		"src",
		"build",
		"proto",
		"index.d.ts"
	],
	"eslintConfig": {
		"extends": "./node_modules/ts-standard/eslintrc.json",
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"rules": {
			"@typescript-eslint/indent": [
				"error",
				4
			],
			"@typescript-eslint/strict-boolean-expressions": "off",
			"@typescript-eslint/explicit-function-return-type": "off",
			"@typescript-eslint/restrict-plus-operands": "off",
			"@typescript-eslint/comma-dangle": [
				"error",
				"always-multiline"
			]
		},
		"ignorePatterns": [
			"proto/build",
			"*.js"
		]
	}
}
